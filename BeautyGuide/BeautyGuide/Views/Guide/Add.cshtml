@model BeautyGuide.Models.GuideDetail
@{
    ViewData["Title"] = "Guide Page";
    ViewData["namePage"] = "Guide";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Add New Guide</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Add">
                   
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name"></label>
                                <input type="text" asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">

                                <label asp-for="NameCategory"></label>
                                <select asp-for="CategoryId" class=" form-control">
                                    @foreach (var item in ViewBag.topicViewModel)
                                    {
                                        <option value="@item.CategoryId"> @item.NameCategory </option>
                                    }
                                </select>
                                
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                           
                            <div class="form-group mb-3">
                                <label asp-for="VideoFile"></label>
                                <input type="file" asp-for="VideoFile" class="form-control" />
                                <span asp-validation-for="VideoFile"></span>
                            </div>
                          
                        </div>
                        <div class="com-sm-12 col-md-6">

                            <div class="form-group mb-3">
                                <label label asp-for="Description"></label>
                                <textarea label asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>

                            <button class="btn btn-primary" type="submit"> Save </button>
                        </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>


