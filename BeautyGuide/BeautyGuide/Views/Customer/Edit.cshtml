@model BeautyGuide.Models.UserDetail
@{
    ViewData["Title"] = "Customer Page";
    ViewData["namePage"] = "Customer";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Edit New Customer</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Edit">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="UserName"></label>
                                <input type="text" asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="AvatarFile"></label>
                                <input type="file" asp-for="AvatarFile" class="form-control" />
                                <span asp-validation-for="AvatarFile"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            
                            <div class="form-group mb-3">
                                <input type="hidden" value="2" asp-for="RoleId" />
                                <span asp-validation-for="RoleId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary" type="submit"> Save </button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

